<div class="navbar-wagon">
  <!-- Logo -->
  <div class="navbar-logo">
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "chatspacelogo.png" %>
    <% end %>
    <p>ChatSpace</p>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
      <div class="dropdown">
        <% if current_user.avatar_url? %>
        <%= image_tag current_user.avatar_url, class: "avatar-square-small dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% else %>
        <%= image_tag 'https://avatars.githubusercontent.com/github', class: "avatar-square-small", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_path do %>
              <i class="fa fa-edit"></i>  <%= t(".edit", default: "Profile") %>
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>


